<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_digital_frontier_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_calling"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_weight="1"
            android:fontFamily="@font/good_times_rg"
            android:textColor="@color/df_yellow"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dflogo"
            android:layout_width="283dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_digital_frontier" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/df_drawable_background_border"
            android:foreground="@android:drawable/sym_action_call"
            android:foregroundGravity="center" />

        <Button
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/df_drawable_background_border"
            android:foreground="@android:drawable/ic_lock_silent_mode"
            android:foregroundGravity="center" />

        <Button
            android:id="@+id/decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/df_drawable_background_border"
            android:foreground="@android:drawable/ic_menu_close_clear_cancel"
            android:foregroundGravity="center" />

    </LinearLayout>

</LinearLayout>

